<%= form_for ([@tournament,@phase]) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :participants %><br />
    <%= f.text_field :participants %>
  </div>
   <div class="field">
    <%= f.label :qualifies %><br />
    <%= f.text_field :qualifies %>
  </div>
  <div class="field">
   <%= f.collection_select(:parent_phase_ids, @tournament.phases.find(:all), :id, :name, {}, :multiple => true) %>
  </div>
  <div class="actions">
    <%= f.submit button %>
  </div>
<% end %>